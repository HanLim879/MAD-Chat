<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_profile_background"
    tools:context=".activities.UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <!--My Profile-->
                <TextView
                    android:id="@+id/userProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/profilePicture"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--The return back button-->
                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back_btn"
                    tools:ignore="VectorDrawableCompat"/>

                <!--User Profile Picture-->
                <ImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="130dp"
                    android:layout_height="109dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/profile_picture" />

                <!--User Name-->
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/userEmail"
                    app:layout_constraintEnd_toEndOf="@+id/profilePicture"
                    app:layout_constraintStart_toStartOf="@+id/profilePicture"
                    app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

                <!--User Email-->
                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/userName"
                    app:layout_constraintStart_toStartOf="@+id/userName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--ACCOUNT BUTTON-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/accountBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="5dp"
                    android:text="Account"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_design"
                    android:drawableLeft="@drawable/my_account_icon"
                    android:drawablePadding="40dp"
                    android:paddingLeft="40dp"/>

                <!--SETTINGS BUTTON-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/settingsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Settings"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_design"
                    android:drawableLeft="@drawable/setting_icon"
                    android:drawablePadding="40dp"
                    android:paddingLeft="40dp"/>

                <!--QR CODE BUTTON-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qrBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="QR Code"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_design"
                    android:drawableLeft="@drawable/qr_code_icon"
                    android:drawablePadding="40dp"
                    android:paddingLeft="40dp"/>

                <!--ATTENDANCE RECORD BUTTON-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/attendanceBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Attendance Record"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_design"
                    android:drawableLeft="@drawable/attendance_icon"
                    android:drawablePadding="40dp"
                    android:paddingLeft="40dp"/>

                <!--LOGOUT BUTTON-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/logoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Logout"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_design"
                    android:drawableLeft="@drawable/logout_icon"
                    android:drawablePadding="40dp"
                    android:paddingLeft="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>